<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.baggagehandler">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Baggage Handler"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashScreenView"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StaffLogin"
            android:label="Sign In"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ScanCode"
            android:label="@string/title_activity_scan_code"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"/>
        <activity
            android:name=".Notifications"
            android:label="@string/title_activity_notifications"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Flights"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home"
            android:label="@string/title_activity_flights" />
        <activity
            android:name=".Passengers"
            android:label="@string/title_activity_passengers"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Baggage"
            android:label="@string/title_activity_baggage"
            android:screenOrientation="portrait"
            android:parentActivityName=".Home" />


        <activity android:name=".Home"
            android:label="Home"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>