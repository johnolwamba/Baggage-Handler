<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.baggagehandler.Home">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="20dp"
        android:id="@+id/textTitle"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="118dp"
        android:layout_marginStart="118dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnScan"
        android:layout_marginTop="38dp"
        android:background="@mipmap/scan"
        android:layout_below="@+id/textTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnNotifications"
        android:background="@mipmap/notifications"
        android:layout_alignTop="@+id/btnScan"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnAllFlights"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btnScan"
        android:layout_alignStart="@+id/btnScan"
        android:background="@mipmap/flights" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnAllPassengers"
        android:background="@mipmap/passengers1"
        android:layout_above="@+id/btnAllBaggage"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnAllBaggage"
        android:layout_marginTop="62dp"
        android:layout_below="@+id/btnAllFlights"
        android:layout_alignLeft="@+id/btnAllFlights"
        android:layout_alignStart="@+id/btnAllFlights"
        android:background="@mipmap/baggage" />

    <ImageButton
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/btnLogout"
        android:layout_alignTop="@+id/btnAllBaggage"
        android:layout_alignLeft="@+id/btnAllPassengers"
        android:layout_alignStart="@+id/btnAllPassengers"
        android:background="@mipmap/logout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Scan"
        android:id="@+id/txtScan"
        android:layout_below="@+id/btnScan"
        android:layout_alignLeft="@+id/btnScan"
        android:layout_alignStart="@+id/btnScan"
        android:layout_alignRight="@+id/btnScan"
        android:layout_alignEnd="@+id/btnScan" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Notifications"
        android:id="@+id/txtNotifications"
        android:layout_below="@+id/btnNotifications"
        android:layout_alignLeft="@+id/btnNotifications"
        android:layout_alignStart="@+id/btnNotifications" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All Flights"
        android:id="@+id/txtFlights"
        android:layout_below="@+id/btnAllFlights"
        android:layout_alignLeft="@+id/btnAllFlights"
        android:layout_alignStart="@+id/btnAllFlights" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All Passengers"
        android:id="@+id/txtPassengers"
        android:layout_below="@+id/btnAllPassengers"
        android:layout_alignLeft="@+id/btnAllPassengers"
        android:layout_alignStart="@+id/btnAllPassengers"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="All Baggage"
        android:id="@+id/txtBaggage"
        android:layout_below="@+id/btnAllBaggage"
        android:layout_alignLeft="@+id/btnAllBaggage"
        android:layout_alignStart="@+id/btnAllBaggage" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Logout"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/txtBaggage"
        android:layout_alignRight="@+id/btnNotifications"
        android:layout_alignEnd="@+id/btnNotifications" />

</RelativeLayout>
